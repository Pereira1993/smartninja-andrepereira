while True:
    print("Hello! This program will convert kilometers into miles. Please, enter your number!")

    km = input("Kilometers: ")

    km = float(km.replace(",", "."))  # substitui a vírgula por um ponto, caso o utilizador utilize uma vírgula

    miles = km * 0.62137119224

    print("{0} kilometers is {1} miles." .format (km, miles))

    choice = input("Thank you for trying our program. Do you need another conversion?(Yes/No): ")

    if choice.lower()!= "yes" and choice.lower() != "y" and choice.lower() != "yeah":
        break
        
